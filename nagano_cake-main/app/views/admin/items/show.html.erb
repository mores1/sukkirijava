<div class="container">
  <h3>商品詳細</h3>
  <div class="row">
    <div class="col-lg-4">
      <%= image_tag @item.get_image_id, size: "200x200" %>
    </div>

    <div class="col-lg-8">
      <table class="table table-borderless">
        <tbody>
           <tr>
             <td>商品名</td>
             <td><%= @item.name %></td>
           </tr>
           <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格(税抜価格)</td>
            <td>
             <%= @item.with_tax_price.to_s(:delimited)%>
             (<%= @item.price.to_s(:delimited) %>)円
            </td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <% if @item.is_active == true %>
               <p class="text-success">販売中</p>
              <% else %>
               <p class="text-danger">販売停止中</p>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-4 offset-5">
    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
  </div>
</div>
