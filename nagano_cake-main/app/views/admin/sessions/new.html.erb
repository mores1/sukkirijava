<div class="container">
  <div class="row">
    <h2>管理者ログイン</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <form>
      <div class="form-group row">
        <%= f.label :メールアドレス, class:"col-2 offset-3 col-form-label" %>
        <div class="col-md-5">
          <%= f.email_field :email, class:"form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :パスワード, class:"col-2 offset-3 col-form-label" %>
        <div class="col-md-5">
          <%= f.password_field :password, class:"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-2 mt-4 offset-5">
          <%= f.submit "ログイン", class:"btn btn-primary btn-block btn-sm" %>
        </div>
      </div>
    </form>
  <% end %>
</div>
<%= render "admin/shared/links" %>